<div align="center" style="height: 100px;">
</div>
<div align="center">
    <%= form_tag "/brands/create" do %>
      添加品牌:<%= text_field_tag "name_1", params[:name_1] %>
        <%= submit_tag "保存" %>
    <% end %>
</div>
<br>
<br>
<div align="center">
  <%= form_tag "/brands/add" do %>
      ID：<%= text_field_tag "id", params[:id] %>
      名称：<%= text_field_tag "name_2", params[:name_2] %>
      <%= submit_tag "查询" %>
  <% end %>
  <br>
  <br>
  <table width="60%" border="1">
    <tr>
      <th width="20%">ID</th>
      <th width="40%">名称</th>
      <th width="40%">添加时间</th>
    </tr>
    <% if @brands.present? %>
        <% @brands.each do |brand| %>
            <tr>
              <td align="center"><%= brand.id %></td>
              <td align="center"><%= brand.name %></td>
              <td align="center"><%= brand.updated_at.try(:strftime, "%Y-%m-%d")%></td>
              <td align="center">

              </td>
            </tr>
        <% end %>
    <% else %>
        <tr>
          <td colspan="4">暂无数据</td>
        </tr>
    <% end %>
  </table>

</div>
