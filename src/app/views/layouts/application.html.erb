<!DOCTYPE html>
<html>
<head>
  <title><%= get_page_title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= get_title[1]%>" class="<%= get_title[2]%>">
	<div id='header'>
      <%= render :partial=>'layouts/admin_header' %>
      <% unless get_title[3].blank?%>	
        <div id="subNavi">
          <%= render :partial => "layouts/#{get_title[3] }" %>
        </div>
      <% end %>	  
    </div>
    <%= render :partial => "/layouts/messages" %>
	<div id="content">
      <div id="ajax-indicator" style='display:none;'>
        <span><%= "读入中..." %></span>
      </div>		
      <%= yield %>
    </div>
	<div id="footer"><%= render :partial => "/layouts/footer"%></div>
</body>
</html>
